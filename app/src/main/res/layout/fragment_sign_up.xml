<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient"
    tools:context=".auth.activities.AuthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/first_name"
            style="@style/editAuth"
            android:background="@drawable/rounded_light"
            android:color="@color/white"
            android:hint="@string/first_name" />

        <EditText
            android:id="@+id/last_name"
            style="@style/editAuth"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_light"
            android:hint="@string/last_name" />

        <EditText
            android:id="@+id/username"
            style="@style/editAuth"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_light"
            android:hint="@string/name" />

        <EditText
            android:id="@+id/email"
            style="@style/editAuth"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_light"
            android:hint="@string/email" />

        <EditText
            android:id="@+id/password"
            style="@style/editAuth"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_light"
            android:hint="@string/password" />

        <Button
            android:id="@+id/button_sign_up"
            style="@style/buttonAuth"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_dark"
            android:text="@string/sing_up" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/sign_up_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true" />

        <Button
            android:id="@+id/from_sign_up_to_sign_in"
            style="@style/buttonText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            android:elevation="0dp"
            android:text="@string/sing_in"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>
