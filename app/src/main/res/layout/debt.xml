<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_debt_list"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/debt_user_image"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:padding="10dp" />

            <TextView
                android:id="@+id/debt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/debt_user_image"
                android:textSize="15sp" />

            <!--<TextView
                android:id="@+id/debt_user_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/debt_user_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/debt_user_image"
                android:textSize="15sp" />-->

            <TextView
                android:id="@+id/debt_user_debt"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>