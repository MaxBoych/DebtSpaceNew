<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="4dp"
    android:background="@drawable/rounded_light">

    <androidx.cardview.widget.CardView
        android:id="@+id/found_list_item"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/rounded_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/found_user_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/found_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/found_user_image"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/found_user_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/found_user_name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/found_user_image"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>